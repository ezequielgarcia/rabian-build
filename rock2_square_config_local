#board name
BOARD=rock2_square
TYPECHIP=rk32

#can be emmc.img, nand.img or sdcard.img
IMAGE_TARGET=emmc.img

#configuration for u-boot
UBOOT_REPO="git://x1/github/u-boot-rockchip.git"
UBOOT_REV=u-boot-rk3288
UBOOT_DEFCONFIG=rk3288_defconfig
UBOOT_EXTRA=

#configuration for linux kernel
KERNEL_REPO="git://x1/github/linux-rockchip.git"
KERNEL_REV=rock2-square-rbox
KERNEL_DEFCONFIG=radxa_rock2_square_defconfig
KERNEL_EXTRA=radxa-rock2-square.img

#initrd
INITRD_REPO="git://x1/github/initrd.git"
INITRD_REV=master

#linux-boot.img second
BOOTIMG_SECOND=resource.img

#rootfs URL
BOARD_ROOTFS=debian-jessie-desktop.ext4
BOARD_ROOTFS_URL="http://dl.radxa.com/rock2/images/rootfs/debian-jessie-desktop.ext4.xz"
